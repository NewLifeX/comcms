@model COMCMS.Core.AdminLog
@{ 
    ViewBag.title = "查看管理日志详情";
    string content = Model.Actions;
    if (!string.IsNullOrEmpty(content))
    {
        content = content.Replace("|||", "<br />");
    }
}

<div class="wrapper wrapper-content ">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>@ViewBag.title</h5>
            <div class="ibox-tools">
            </div>
        </div>
        <div class="ibox-content">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "editGuestbookForm", @class = "form-horizontal m-t" }))
    {
        <div class="form-group">
            <label class="col-sm-3 control-label">唯一编号：</label>
            <div class="col-sm-8">
                <label class="control-label">@Model.GUID</label>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">登录用户名：</label>
            <div class="col-sm-8">
                <label class="control-label">@Model.UserName</label>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">尝试登录密码：</label>
            <div class="col-sm-8">
                <label class="control-label">@Model.PassWord （成功则隐藏）</label>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">登录时间：</label>
            <div class="col-sm-8">
                <label class="control-label">@Model.LoginTime.ToString("yyyy-MM-dd HH:mm")</label>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">登录IP：</label>
            <div class="col-sm-8">
                <label class="control-label">@Model.LoginIP</label>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">最后操作时间：</label>
            <div class="col-sm-8">
                <label class="control-label">@Model.LastUpdateTime.ToString("yyyy-MM-dd HH:mm")</label>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">操作详细日志：</label>
            <div class="col-sm-8">
                <label class="control-label" style="text-align:left">@Html.Raw(content)</label>
            </div>
        </div>

        <div class="hr-line-dashed"></div>
        <div class="form-group">
            <div class="col-sm-4 col-sm-offset-3">
                <button class="btn btn-default" type="button" onclick="closethisdialog();"><i class="fa fa-close"></i> 关闭 </button>
            </div>
        </div>
}
        </div>
    </div>


</div>